<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<li class="next page-item d-none d-md-flex" aria-label="Fara á næstu síðu">
  <%= link_to_unless current_page.last?, t('views.pagination.next').html_safe, url, rel: 'next', remote: remote, class: 'page-link' %>
</li>
<li class="next page-item d-md-none d-sm-flex" aria-label="Fara á næstu síðu >
  <%= link_to_unless current_page.last?, '&raquo;'.html_safe, url, rel: 'next', remote: remote, class: 'page-link' %>
</li>
