<header class="row mb-5 p-4 pt-2 justify-content-between align-items-end">
  <nav aria-label="Aftur á forsíðu" class="site-logo col-xl-3 col-lg-4 col-md-4 col-sm-12">
    <a href="<%= root_path %>" title="Fara á forsíðu Bókatíðinda">
      <%= image_tag 'logotype-cropped.svg', height: '105', width: '689', alt: 'Bókatíðindi', class: 'img-fluid' %>
    </a>
  </nav>
  
  <form
    class="col-lg-6 col-sm-12 mt-5"
    aria-label="Leit"
    method="get"
    action="/baekur"
  >
    <div class="input-group">
      <input
        class="form-control form-control-lg"
        aria-label="Leitarorð"
        type="search"
        name="search"
        placeholder="Leitarorð…"
        <% unless params[:search].nil? %>
        value="<%= params[:search] %>"
        <% end %>
      >
      <input type="submit" value="Leita" class="btn btn-lightgrey ml-2">
    </div>
  </form>
  <%= render 'layouts/navbar' %>
</header>