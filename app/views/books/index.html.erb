  <div class="container-fluid">

    <% if @books.length.positive? %>

    <%= render 'books/results_heading' %>

    <%= render 'books/results' %>

    <% else %>

    <%= render 'books/no_results' %>

    <% end %>

  </div>

  <% unless params[:search] %>
  <%= paginate @books %>
  <% end %>

</main>