<p id="notice"><%= notice %></p>

<hgroup>
<% unless @book.pre_title.empty? %>
  <h1 class="pre-title">
    <%= @book.pre_title %>
  </h1>
  <h2 class="title">
    <%= @book.title %>
  </h2>
  <% unless @book.post_title.empty? %>
  <h3 class="post-title">
    <%= @book.post_title %>
  </h3>
  <% end %>
<% else %>
  <h1 class="title">
    <%= @book.title %>
  </h1>
  <% unless @book.post_title.empty? %>
  <h2 class="post-title">
    <%= @book.post_title %>
  </h2>
  <% end %>
<% end %>
</hgroup>

<section class="description">
  <%= @book.show_description %>
</section>

