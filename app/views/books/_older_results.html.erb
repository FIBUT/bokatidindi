<% if @books_from_old_editions %>
<section class="row m-2 mt-4 p-4 pb-4" id="search-results-from-older-editions">
  <div class="col col-12">

    <h2 class="my-4">
      Niðurstöður úr eldri tölublöðum Bókatíðinda
    </h2>

    <table class="table table-striped table-bordered">
      <thead>
        <th scope="col">Titill</th>
        <th scope="col">Höfundur</th>
        <th scope="col">Útgefandi</th>
        <th scope="col">Lýsing</th>
      </thead>
      <tbody>
      <% @books_from_old_editions.each do |b| %>
        <tr>
          <th scope="row"><%= link_to b.full_title_noshy, book_path(b.slug) %></th>
          <td><%= b.author_names_string %></td>
          <td><%= b.publisher.name %></td>
          <td><%= b.short_description %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>
<% end %>