<ul
  class="book-authors d-block pl-0"
  aria-label="Höfundar"
>
  <% local_assigns[:book].book_authors.select { |ba| ba.author_type_id == 2 }.each_with_index do |a,i| %>
  <li
    id="book-<%= local_assigns[:book].id %>-authors--<%= i %>"
    class="authors mb-1 d-block"
  >
    <a
      href="<%= author_path(a.author.slug) %>"
      title="Skoða fleiri bækur eftir <%= a.name %>"
    >
      <%= a.name %>
    </a>
  </li>
  <% end %>
</ul>
