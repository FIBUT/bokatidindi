<% content_for :meta do %>
  <%= preload_link_tag asset_url('boksala-square.svg'), as: 'image' %>
  <%= preload_link_tag asset_url('forlagid-square.svg'), as: 'image' %>
  <%= preload_link_tag asset_url('penninn-eymundsson-square.svg'), as: 'image' %>
  <%= preload_link_tag asset_url('salka-square.svg'), as: 'image' %>
  <%= preload_link_tag asset_url('storytel-square.svg'), as: 'image' %>

  <title>Bókatíðindi - Helstu bækur ársins á einum stað - Jólabókaflóðið</title>

  <%= tag 'meta', name: 'description', content: @meta_description %>
  <%= tag 'link', rel: 'canonical', href: 'https://www.bokatidindi.is/' %>

  <%= tag 'meta', property: 'og:type', content: 'website' %>
  <%= tag 'meta', property: 'og:image', content: asset_path('favicon.png') %>
  <%= tag 'meta', property: 'og:image:width', content: '512' %>
  <%= tag 'meta', property: 'og:image:height', content: '512' %>
  <%= tag 'meta', property: 'og:site_name', content: 'Bókatíðindi' %>
  <%= tag 'meta', property: 'og:title', content: 'Bókatíðindi' %>
  <%= tag 'meta', property: 'og:description', content: @meta_description %>
  <%= tag 'meta', property: 'og:url', content: 'https://www.bokatidindi.is/' %>
  <%= tag 'meta', property: 'og:locale', content: 'is_IS' %>
  <%= tag 'meta', property: 'fb:app_id', content: '286582403328194' %>

  <%= tag 'meta', name: 'twitter:card', content: 'summary' %>
  <%= tag 'meta', name: 'twitter:title', content: 'Bókatíðindi' %>
  <%= tag 'meta', name: 'twitter:description', content: @meta_description %>

<% end %>

<main role="main">

  <div class="mb-5">
    <div class="welcome-content py-5 px-md-0">
      <div class="container-lg">
        <div class="row mx-4">
          <div class="d-flex flex-column justify-content-end col-12 col-lg-5 col-xl-5">
            <h1 class="hero-heading">Flestar bækur miðað við höfða&shy;tölu</h1>
          </div>
          <div class="d-flex flex-column justify-content-end col-12 col-lg-4 col-xl-<%= @welcome_textbox_cols %> pt-4">
            <p>
              Bókatíðindi hafa síðan 1928 veitt yfirlit yfir útgáfu ársins fyrir
              bókaunnendur. Þar má alltaf nálgast upplýsingar um þær bækur sem gefnar
              eru út á hverju ári.
            </p>
            <p>
              Frá upphafi hafa bókatíðindi verið prentuð í
              takmörkuðu upplagi og dreift til lesenda fyrir jólin en núna eru þau
              aðgengileg allan ársins hring, hvenær sem bókaorma langar að kynna sér
              hvað er nýtt og spennandi að lesa.
            </p>
          </div>
          <% unless Edition.current_edition.cover_image_url.empty? %>
          <div class="d-none d-lg-flex flex-column justify-content-end col-3" role="presentation">
            <img
              class="w-100"
              role="presentation"
              srcset="<%= Edition.current_edition.cover_image_srcsets[@image_format] %>"
              src="<%= Edition.current_edition.cover_image_url %>"
              sizes="260px"
              alt="Forsíða Bókatíðinda"
            />
          </div>
          <% unless Edition.current_edition.pdf_file_url.empty? %>
          <div class="col-12 col-xl-3 offset-lg-9 offset-xl-9 mt-2">
              <a
                href="<%= Edition.current_edition.pdf_file_url %>"
                class="btn btn-darkgrey"
              >
                Sækja PDF-útgáfu
              </a>
          </div>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <aside class="container-lg">

    <nav class="row mx-4" aria-label="Vöruflokkar">

      <% Category.groups.each do |category_group| %>
      <div class="col-md-4 py-0 px-3 pb-5">
          <h2
            class="mb-3"
          >
            <%= I18n.t("activerecord.attributes.category.groups.#{category_group[0]}") %>
          </h2>
          <ul class="list-unstyled welcome-category-list">
            <%
            Category.where(group: category_group[1]).order('rod').each do |c|
            next if c.book_count_web.zero?
            %>
            <li class="">
              <%= link_to c.name, category_path(c.slug), class: 'd-block' %>
            </li>
            <% end %>
          </ul>
      </div>
      <% end %>

    </nav>

  </aside>

  <footer aria-labelledby="sponsor-blurp">
    <div class="welcome-content p-4 pt-5">
      <p class="text-center" id="sponsor-blurp">
        Við bendum á eftirfarandi vefverslanir sem selja fjölbreytt úrval íslenskra bóka:
      </p>
      <%= render 'shared/ecommerce_links' %>
    </div>
  </footer>

</main>
